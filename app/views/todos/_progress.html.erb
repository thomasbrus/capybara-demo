<%- progress = @total_count.zero? ? 0 : @finished_count / @total_count.to_f * 100 %>

<div
  id="progress"
  class="w-full h-4 max-w-sm bg-gray-200 rounded-full relative shadow-inner"
  role="progressbar"
  aria-valuemin="0"
  aria-valuemax="100"
  aria-valuenow="<%= progress %>"
  aria-label="Todos completed">
  <div class="h-full bg-gradient-to-b from-green-500 to-green-600 rounded-full absolute" style="<%= "width: #{progress}%" %>">
</div>
